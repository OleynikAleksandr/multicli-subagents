{
  "name": "multicli-agents",
  "displayName": "SubAgent Manager",
  "description": "Manage CLI Sub-Agents inside VS Code",
  "version": "0.0.1",
  "publisher": "OleksandrOliinyk",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "multicli-agents-container",
          "title": "SubAgents",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "multicli-agents-container": [
        {
          "type": "webview",
          "id": "multicli-agents.webview",
          "name": "SubAgent Manager"
        }
      ]
    },
    "commands": [
      {
        "command": "multicli-agents.open",
        "title": "SubAgent Manager: Open"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "npx ultracite check",
    "format": "npx ultracite fix",
    "test": "node ./out/test/runTest.js",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.85.0",
    "@vscode/test-electron": "^2.3.2",
    "glob": "^8.1.0",
    "husky": "^9.1.7",
    "lefthook": "^2.0.8",
    "lint-staged": "^16.2.7",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "ultracite": "^6.3.9"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "npx ultracite fix"
    ]
  }
}
